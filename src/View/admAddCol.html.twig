{% endblock %}

{% block script %}
    <script src=""> </script>
{% endblock %}

{% block content %}
    <div id="add-col-div">
        <div id="clo-cro-div">
            <button id="close-cross"> X </button>
        </div>
        <form method="POST" action="">
            <div class="flex-rig">
                <label for="gro-inp" class="inp-lab"> Groupe: </label>
                <input type="text" id="gro-inp" class="inp" name="colorGroup" />
            </div>
